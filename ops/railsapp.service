[Unit]
Description=rails application
After=network.target

[Service]
Environment="GEM_HOME=/opt/gem"
PIDFile=/opt/app/todos-api/tmp/pids/puma.pid
User=railsapp
Type=forking
WorkingDirectory=/opt/app/todos-api
ExecStart=/usr/local/bin/bundle exec puma
Restart=on-failure

[Install]
WantedBy=default.target
